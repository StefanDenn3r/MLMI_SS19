{
  "name": "XRay",
  "n_gpu": 1,
  "arch": {
    "type": "StackedHourglassNet",
    "args": {
      "num_stacks": 3,
      "num_blocks": 1
    }
  },
  "data_loader": {
    "type": "XRayDataLoader",
    "args": {
      "data_dir": "data/XRay/Everything",
      "batch_size": 4,
      "shuffle": false,
      "validation_split": 0.1,
      "num_workers": 1
    }
  },
  "optimizer": {
    "type": "Adam",
    "args": {
      "lr": 0.001,
      "weight_decay": 0,
      "amsgrad": true
    }
  },
  "loss": "jointmseloss",
  "metrics": [
    "mock_metric"
  ],
  "lr_scheduler": {
    "type": "StepLR",
    "args": {
      "step_size": 50,
      "gamma": 0.1
    }
  },
  "trainer": {
    "epochs": 100,
    "save_dir": "saved/",
    "save_period": 1,
    "verbosity": 2,
    "monitor": "min val_loss",
    "early_stop": 50,
    "tensorboardX": true
  }
}
