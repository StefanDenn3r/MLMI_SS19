{
  "name": "XRay",
  "n_gpu": 1,
  "arch": {
    "type": "StackedHourglassNet",
    "args": {
      "num_channels": 256,
      "num_stacks": 3,
      "num_blocks": 2
    }
  },
  "data_loader": {
    "type": "XRayDataLoader",
    "args": {
      "data_dir": "data/XRay/Ex3",
      "batch_size": 1,
      "shuffle": false,
      "validation_split": 0.5,
      "num_workers": 1
    }
  },
  "optimizer": {
    "type": "Adam",
    "args": {
      "lr": 0.001,
      "weight_decay": 0,
      "amsgrad": true
    }
  },
  "loss": "jointmseloss",
  "metrics": [
    "smooth_l1_loss",
    "percentage_correct_keypoints",
    "keypoint_distance_loss"
  ],
  "lr_scheduler": {
    "type": "StepLR",
    "args": {
      "step_size": 50,
      "gamma": 0.1
    }
  },
  "trainer": {
    "epochs": 100,
    "save_dir": "saved/proxyLoss/",
    "save_period": 1,
    "verbosity": 2,
    "monitor": "min val_loss",
    "early_stop": 50,
    "tensorboard": true,
    "tensorboardX": false
  }
}
